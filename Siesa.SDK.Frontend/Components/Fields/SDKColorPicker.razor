<RadzenColorPicker 
    Value="@Value" 
    Change="@ValueChanged"
    ShowColors="@ShowColors"
    ShowHSV="@ShowHSV"
    ShowRGBA="@ShowRGBA"
    Style="@GetCss()"
    Disabled="@Disabled"
    />

@code {
    [Parameter] 
    public string Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    [Parameter]
    public bool ShowColors { get; set; } = true;

    [Parameter]
    public bool ShowHSV { get; set; } = true;

    [Parameter]
    public bool ShowRGBA { get; set; }

    [Parameter]
    public string CssClass { get; set; }

    [Parameter]
    public bool FullWidth { get; set; } = false;

    private string GetCss(){
        
        if (string.IsNullOrEmpty(CssClass) && FullWidth)
        {
            return "width: 100%;";
        }
        else if (string.IsNullOrEmpty(CssClass) && !FullWidth)
        {
            return "";
        }
        else if (!string.IsNullOrEmpty(CssClass) && FullWidth)
        {
            return $"width: 100% {CssClass}";
        }
        else
        {
            return CssClass;
        }
    }
    
    [Parameter]
    public bool Disabled { get; set; }
}