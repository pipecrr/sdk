@typeparam ItemType
@using System.Linq.Expressions
<DxComboBox  
    Value="@Value" 
    ValueChanged="@ValueChanged" 
    NullText="@Placeholder"
    ReadOnly="@ReadOnly"
    CssClass="@CssClass"
    Data="@Options"
    ValueExpression="@ValueExpression"
    ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto"
>
@ChildContent
</DxComboBox>

@code {
    [Parameter] public Expression<Func<ItemType>> ValueExpression { get; set; }
    [Parameter] public ItemType Value { get; set; } = default!;
    [Parameter] public Action<ItemType> ValueChanged { get; set; } = (value) => {};
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public IEnumerable<ItemType> Options { get; set; }
    [Parameter] public string Placeholder { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public string CssClass { get; set; }

    
}