@using Siesa.SDK.Frontend.Components.Visualization
@using Siesa.SDK.Frontend.Components.Fields

@layout EmptyLayout

<div class="container-fluid">
    <div class="container-fluid">
            <h2>SDKBooleanNullableField</h2> 
            <p>El componente SDKBooleanNullableField , funciona igual que el SDKBooleanField con la excepcion que este componente por defecto permite threeState y el tipo de valor es un bool nullable</p> 
    </div>
    <div class="row px-3"> 
        <div class="col-md-6 p-3">
            <SDKCard >
                <h3>Three State</h3>
                <SDKBooleanNullableField @bind-Value="@threeStateValue" Enabled="true">
                </SDKBooleanNullableField>
                <p>Value: @threeStateValue</p>
            </SDKCard>
        </div>
        <div class="col-md-6 p-3">
            <SDKCard >
                <h3>Two State</h3>
                <SDKBooleanNullableField @bind-Value="@twoStateValue" Enabled="true" AllowIndeterminateStateByClick="false">
                </SDKBooleanNullableField>
                <p>Value: @twoStateValue</p>
            </SDKCard>
        </div>
    </div>
</div>

@code{

public bool? threeStateValue;
public bool? twoStateValue = true;

}