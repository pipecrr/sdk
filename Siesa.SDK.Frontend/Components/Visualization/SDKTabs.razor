@inherits SDKComponent;

<CascadingValue Value="this">
    <DxTabs ChildContent="@ChildContent" ActiveTabIndex="@ActiveTabIndex"
        ActiveTabIndexChanged=@OnActiveTabIndexChanged ScrollMode="@ScrollMode" data-automation-id="@GetAutomationId()" CssClass="@CssClass"/>
</CascadingValue>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public Action<int> OnChangeActiveTab { get; set; }

    [Parameter]
    public string CssClass { get; set; }

    public List<SDKTab> Tabs { get; set; } = new List<SDKTab>();

    [Parameter]
    public TabsScrollMode ScrollMode { get; set; }


    [Parameter] public int ActiveTabIndex {get; set;}
    void OnActiveTabIndexChanged(int index)
    {
        ActiveTabIndex = index;
        OnChangeActiveTab?.Invoke(index);
    }

    protected override string GetAutomationId()
    {
            return base.GetAutomationId();
    }
}