@typeparam ItemType

<RadzenSlider Range="@Range" Value="@Value" TValue="ItemType" Change="@ValueChanged" 
Min="@MinRange" Max="@MaxRange" Step="@Step"  Disabled="@Disabled" Style="@CssStyle"/>


@code 
{
    
    [Parameter] public ItemType Value { get; set; } 
    [Parameter] public Action<ItemType> ValueChanged {get; set;}
    [Parameter] public bool Range { get; set; } = false; 
    [Parameter] public decimal MinRange { get; set; } = 0;
    [Parameter] public decimal MaxRange { get; set; } = 100;
    [Parameter] public string Step { get; set; } = "1";
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public string CssStyle { get; set; }

}