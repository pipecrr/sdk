@inject UtilsManager UtilManager

<DxAccordionItem Text="@Text" Expanded="@Expanded" class="mt-3">
        <ContentTemplate>
            
            @ChildContent
        </ContentTemplate>
</DxAccordionItem>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public bool Expanded { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string ResourceTag { get; set; }
    protected override async Task OnInitializedAsync(){
        if(!string.IsNullOrEmpty(ResourceTag)){
            Text = await UtilManager.GetResource(ResourceTag);
        }
        base.OnInitializedAsync();
    }
}