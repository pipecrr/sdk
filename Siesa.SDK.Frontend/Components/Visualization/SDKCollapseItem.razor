        <ContentTemplate>
            
            @ChildContent
        </ContentTemplate>
</DxAccordionItem>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public bool Expanded { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}