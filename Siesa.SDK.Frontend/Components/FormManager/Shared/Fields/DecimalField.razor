@inherits FieldClass<Double>
@inject IJSRuntime JSRuntime

    <OFormGroup FieldId="@FieldOpt.Id" Label="@FieldOpt.Label"
                SM="@(FieldOpt.ColSize.ContainsKey("SM") ? FieldOpt.ColSize["SM"].ToString() : null)"
                MD="@(FieldOpt.ColSize.ContainsKey("MD") ? FieldOpt.ColSize["MD"].ToString() : null)"
                XS="@(FieldOpt.ColSize.ContainsKey("XS") ? FieldOpt.ColSize["XS"].ToString() : null)"
                LG="@(FieldOpt.ColSize.ContainsKey("LG") ? FieldOpt.ColSize["LG"].ToString() : null)"
                XL="@(FieldOpt.ColSize.ContainsKey("XL") ? FieldOpt.ColSize["XL"].ToString() : null)">
        <DxSpinEdit Value="@((double)GetValue)" NullText="@FieldOpt.Placeholder" ReadOnly="@FieldOpt.Disabled"
                    @attributes="FieldOpt.CustomAtributes" ClearButtonDisplayMode="DataEditorClearButtonDisplayMode.Auto" CssClass="@FieldOpt.CssClass"
                    Id="@FieldOpt.Id" ValueChanged="@((double newValue) => SetAttr(newValue))"></DxSpinEdit>
    </OFormGroup>
    

