@inherits FieldClass<dynamic>
@using Siesa.SDK.Frontend.Components.Fields

@if (!FieldOpt.Hidden)
{

    <SDKEntityField
        BusinessName="@BaseModelObj.BusinessName"
        RelatedBusiness="@FieldOpt.RelatedBusiness"
        BaseObj="@BindModel"
        SetValue="@SetValue"
        FieldName="@FieldName"
        RelatedParams="@FieldOpt.RelatedParams"
        RelatedFilters="@_relatedFilters"
        Disabled="@FieldOpt.Disabled"
        Filters="@_filters"
        ParentBusinessObj = "@BaseModelObj"
        OnReady="@OnReady"
        OnChange="@OnChange"
    />

    @FieldValidationTemplate
}
