@page "/{BusinessName}/edit/{BusinessObjId}/"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@inherits Siesa.SDK.Frontend.Components.FormManager.ViewModels.DynamicBaseViewModel
@if (ErrorMsg != null && ErrorMsg != "")
{
     <ErrorsWindow GeneralErrors="@ErrorList" />
}
else if (BusinessObj.BaseObj == null)
{
    <text>Loading...</text>
}
else if (BusinessObj.BaseObj.Rowid != 0)
{
    <DynamicComponent Type="@(typeof(Views.EditView))" Parameters="@parameters" />
}

@code{
    protected override void OnInitialized()
    {
        if(BusinessName.Equals("BLAttachmentDetail")){
            BusinessObj.BLName = BLNameParentAttatchment;
        }
        ViewType = ViewModels.DynamicViewType.Edit;
        base.OnInitialized();
    }
}